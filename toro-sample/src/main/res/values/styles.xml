<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="AppTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="Toro.Widget.SampleItemButton" parent="android:Widget">
    <item name="android:layout_marginBottom">@dimen/activity_horizontal_margin</item>
    <item name="android:background">@android:color/white</item>
    <item name="android:clickable">true</item>
    <item name="android:focusable">true</item>
    <item name="android:foreground">?attr/selectableItemBackground</item>
    <item name="android:orientation">vertical</item>
    <item name="android:padding">8dp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

  <style name="Toro.Dialog.Fullscreen" parent="Theme.AppCompat.Light.DialogWhenLarge">
    <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
  </style>

  <style name="Toro.Dialog.Fullscreen.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>

  <style name="DimmedTextButton" parent="Facebook.Button.Feed">
    <item name="android:textColor">#e5e5e5</item>
  </style>

  <style name="Toro.Theme.Playlist" parent="Toro.Dialog.Fullscreen.NoActionBar">
    <item name="android:windowBackground">@android:color/black</item>
  </style>

  <style name="Facebook.Button.Feed" parent="android:Widget">
    <item name="android:gravity">center</item>
    <item name="android:clickable">true</item>
    <item name="android:background">?attr/selectableItemBackground</item>
    <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
  </style>

</resources>
